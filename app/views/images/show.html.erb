<p id="notice"><%= notice %></p>

<div>
	<%= @image.file_name %> (<a href="#file_info">File info</a>)
</div>

<hr />

<button class="button" id="rotate_back" onclick="rotate_image2(-90);">Back</button>
<button class="button" onclick="rotate_image2(90);">+90 right</button>
<button class="button" onclick="rotate_image2(270);">-90 right</button>
<button class="button" onclick="rotate_image2(180);">Upside down</button>

<div id="container">
	<!-- <img src="<%#= $remote_url + '/' + @image.file_name %>" style="width: 50%; height: 50%" /> -->
	<img src="<%= $remote_url + '/' + @image.file_name %>" id="image" />
	<!-- <img src="<%#= $remote_url + '/' + @image.file_name %>" /> -->
</div>

<br />
<hr />

<div id="file_info">
	
	
	<table>
		
		<tr>
			<td>
				<b>File name</b>
			</td>
			<td>
				<%= @image.file_name %>
			</td>
		</tr>
		
		<tr>
			<td>
				File path
			</td>
			<td>
				<%= @image.file_path %>
			</td>
		</tr>
		
		<tr>
			<td>
				<b>Memos</b>
			</td>
			<td>
				<%= @image.memos %>
			</td>
		</tr>
		
		<tr>
			<td>
				<b>Tags</b>
			</td>
			<td>
				<%= @image.tags %>
			</td>
		</tr>
		
		<tr>
			<td>
				<b>Table name</b>
			</td>
			<td>
				<%= @image.table_name %>
			</td>
		</tr>
		
		<tr>
			<td>
				<b>Loc file</b>
			</td>
			<td>
				<%= @image.loc_file_id %>
			</td>
		</tr>
		
	</table>
</div>

<div>
	<a href="#top">Top</a>
</div>

<br />
