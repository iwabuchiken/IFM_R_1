<h1>Listing images</h1>

<table>
  <tr>
    <th>Id</th>
    <th>File name</th>
    <th>File path</th>
    <th>Memos</th>
    <th>Tags</th>
    <th>Table name</th>
    <th>Loc file</th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.id %></td>
    <td>
    	<%= link_to image.file_name, image %>
    </td>
    
    <td><%= image.file_path %></td>
    <td><%= image.memos %></td>
    <td><%= image.tags %></td>
    <td><%= image.table_name %></td>
    <td><%= image.loc_file_id %></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

